<main class="container mt-5 text-center">
    <h1 class="mb-4 text-white">Tech Blog Posts</h1>
    <div class="row text-center"> 
        {{#each posts}}
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header bg-primary">
                        <h2 class="card-title">
                            <a href="/post/{{id}}" class="text-dark"><strong>{{title}}</strong></a>
                        </h2>
                    </div>
                    <div class="card-body text-dark">
                        <p><strong>Created By: </strong>{{user.username}}<strong> Date: </strong>{{format_date created_at}}</p>
                        <p><em>{{content}}</em></p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</main>
