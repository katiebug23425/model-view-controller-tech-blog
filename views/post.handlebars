<main class="container mt-5">
  <article>
    <h1>{{title}}</h1>
    <p>Created by: {{user.username}} | Date: {{format_date created_at}}</p>
    <p>{{content}}</p>
  </article>
  {{#if logged_in}}
    <form class="new-tech-blog-comment-form" class="mb-3">
      <div class="mb-3">
        <label for="content-new-tech-blog-comment" class="form-label">Add Comment Below:</label>
        <textarea
          class="form-control"
          id="content-new-tech-blog-comment"
          rows="3"
          placeholder="Please add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  {{/if}}
  <h2>Comment History:</h2>
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p>By {{user.username}} on {{format_date created_at}}</p>
    </div>
  {{/each}}
</main>