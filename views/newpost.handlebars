<div class="container mt-5">
  <h2 class="mb-4 text-center">Write a New Blog Post</h2>
  <form class="new-tech-blog-post-form">
    <div class="mb-3">
      <label for="title-new-tech-blog-post" class="form-label">Post Title:</label>
      <input
        type="text"
        class="form-control"
        id="title-new-tech-blog-post"
        placeholder="Please enter a title for your post"
      />
    </div>
    <div class="mb-3">
      <label for="content-new-tech-blog-post" class="form-label">Post Content:</label>
      <textarea
        class="form-control"
        id="content-new-tech-blog-post"
        rows="5"
        placeholder="Please enter the content for your post"
      ></textarea>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Create Post</button>
    </div>
  </form>
</div>